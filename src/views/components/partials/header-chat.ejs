<!-- in chat box -->
<div class="client-id" data-user_id=<%= userId %>></div>

<div class="header-chat-box">
    <div class="avatar flex">
        <img src="<%= user.avatar %>" alt="Cannot load avatar">
        <div class="name"><%= user.name %></div>
    </div>
    
    <div class="options">
        <i class="fas fa-ellipsis-h"></i>
    
        <div class="more">
            <div class="profile"><a href="/api/v2/user/profile?id=<%= user.userId %>">Profile</a></div>
            <div class="logout"><a href="/api/v2/auth/logout">Logout</a></div>
        </div>
    </div>
</div>
