<div class="profile">
    <div class="empty"></div>

    <div class="avatar">
        <form class="formAvatar" action="/api/v2/user/update-info?id=<%=user.userId%>&_method=PATCH" method="POST">
            <img class="img-avatar" src="<%=user.avatar %>" alt="..." >
            <input class="invisibility" type="text" value="" name="avatar">
        </form>
            <div class="btn-edit-avatar">
                <label for="input-avatar"><i class="ti-gallery icon-change-avatar"></i></label>
                <input id="input-avatar" type="file" accept="image/*" onchange="loadAvatar()">
            </div>
    </div>

    <div class="detail">
        <div class="name">
            <%= user.name %>
        </div>
    </div>

    <div class="wrapper-options">
        <div class="options flex">
            <div class="privacy">
                <i class="ti-lock"></i>
            </div>
            <div class="settings">
                <i class="ti-settings"></i>
            </div>
        </div>
        
        <form class="info" action="/api/v2/user/update-info?_method=PATCH&id=<%=user.userId %>" method="POST">
            <div class="options-privacy">
                <div class="name">
                    <label for="name">Name:</label>
                    <input class="input-disabled" type="text" value="<%=user.name%>" name="name">
                </div>
                <div class="nick-name">
                    <label for="nickName">NickName:</label>
                    <input class="input-disabled" type="text" value="<%=user.nickName%>" name="nickName">
                </div>
                <div class="email">
                    <label for="email">Email:</label>
                    <input class="input-disabled" type="email" value="<%=user.email%>" name="email">
                </div>
                <div class="address">
                    <label for="address">Address</label>
                    <input class="input-disabled" type="text" value="<%=user.address%>" name="address">
                </div>
                <div class="button flex">
                    <div class="btn btn-edit" onclick="editInfo()">Edit</div>
                </div>
            
            </div>
        </form>

        <div class="options-settings">
            SETTINGS
        </div>
    </div>
</div>