<div class="title-container"><span class="title">Register</span></div>

<form class="register-form" action="/api/auth/register" method="POST">
    <div class="email">
        <label for="email">Email:</label>
        <input type="email" id="email" placeholder="Enter your email address" name="email">
    </div>

    <div class="name">
        <label for="name">Name:</label>
        <input type="text" id="name" placeholder="Enter your name" name="name">
    </div>

    <div class="password">
        <label for="password">Password:</label>
        <input type="password" id="password" placeholder="Enter your password" name="password">
    </div>

    <div class="retype-password">
        <label for="retype-password">Retype password:</label>
        <input type="password" id="retype-password" placeholder="Retype your password" name="confirmPassword">
    </div>

    <div class="btn-submit btn-submit-register"><span>Register</span></div>

    <div class="others">
        You've already had an account? <a href="/api/login">Login</a>
    </div>
</form>

<script src="/js/registerForm.js"></script>
